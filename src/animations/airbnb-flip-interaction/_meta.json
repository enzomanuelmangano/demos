{
  "animation_name": "Airbnb Flip Interaction",
  "animation_slug": "airbnb-flip-interaction",
  "description": "An elegant 3D card flip animation inspired by Airbnb's profile cards. Features smooth spring-based rotation with perspective transforms, coordinated page transitions below the card, and dynamic blur effects. The card flips horizontally to reveal profile statistics on the back, while descriptive content below transitions with keyframe animations and blur overlays.",

  "main_features": [
    "3D card flip animation with perspective transforms",
    "Horizontal and vertical flip orientation support",
    "Coordinated front/back card faces with backface culling",
    "Synchronized description section transitions",
    "Dynamic blur overlay during flip transition",
    "Spring physics for natural, organic motion",
    "Custom keyframe animations for page enter/exit",
    "Responsive card sizing based on screen width",
    "Profile avatar with verification badge",
    "Gradient backgrounds and metallic effects",
    "Touch interaction for card flipping"
  ],

  "file_structure": {
    "index.tsx": "Main app component with card and description sections",
    "constants.ts": "Spacing constants",
    "flip-interaction/": {
      "index.ts": "Export barrel for FlipCard component",
      "constants/index.ts": "Internal spacing constants for card components",
      "components/card/": {
        "index.tsx": "Main FlipCard component with 3D rotation logic",
        "front.tsx": "Front face of card with gradient and profile name",
        "back.tsx": "Back face with profile details and statistics",
        "types.ts": "TypeScript type definitions for profile data",
        "profile-avatar.tsx": "Circular avatar with gradient and verification badge",
        "metallic-background.tsx": "Multi-layer gradient for metallic effect",
        "network-logo.tsx": "Credit card style network logo with overlapping circles",
        "pages/": {
          "MainPage.tsx": "Identity verification content for front view",
          "SecondPage.tsx": "Profile overview content for back view"
        }
      }
    }
  },

  "core_technologies": {
    "animations": "react-native-reanimated",
    "ui_effects": ["expo-blur", "expo-linear-gradient"],
    "layout": "react-native-safe-area-context",
    "pattern": "3D transforms with spring physics"
  },

  "packages_and_versions": {
    "react-native-reanimated": {
      "version": "~4.1.1",
      "components": ["Animated.View"],
      "hooks": [
        "useDerivedValue",
        "useAnimatedStyle",
        "useAnimatedProps",
        "withSpring",
        "interpolate"
      ],
      "layout_animations": ["Keyframe"],
      "critical_feature": "Custom Keyframe animations for page transitions and spring physics for card flip"
    },
    "expo-blur": {
      "version": "~15.0.7",
      "component": "BlurView",
      "usage": "Dynamic blur effect on description section during flip transition",
      "animation": "Animated intensity (0 → 20 → 0)"
    },
    "expo-linear-gradient": {
      "version": "~15.0.7",
      "component": "LinearGradient",
      "usage": [
        "Card front gradient (coral/orange/red)",
        "Profile avatar gradients (dark gray and red)",
        "Metallic background (multi-layer blue steel effect)"
      ]
    },
    "react-native-safe-area-context": {
      "version": "~5.6.0",
      "hook": "useSafeAreaInsets",
      "usage": "Safe area padding for top and bottom"
    }
  },

  "animation_techniques": {
    "3d_flip_rotation": {
      "property": "rotateY",
      "front_range": "[0deg, 180deg]",
      "back_range": "[180deg, 360deg]",
      "perspective": 1000,
      "backface_visibility": "hidden",
      "effect": "Cards rotate around Y-axis, hidden when facing away",
      "spring_config": {
        "mass": 1.2,
        "stiffness": 60,
        "damping": 12,
        "velocity": 0.2
      }
    },
    "scale_breathing": {
      "property": "scale",
      "interpolation": "[1, 0.98, 1]",
      "trigger_points": "[0, 0.5, 1] (progress)",
      "effect": "Card slightly shrinks at midpoint (90deg) for depth perception",
      "applied_to": "Both card faces and container"
    },
    "blur_wave": {
      "property": "BlurView intensity",
      "interpolation": "[0, 10, 20, 10, 0]",
      "trigger_points": "[0, 0.2, 0.5, 0.8, 1] (progress)",
      "peak": "20 at midpoint (maximum blur)",
      "effect": "Blur increases during flip transition, clears at rest",
      "background_color": "rgba(255, 255, 255, 0.5)"
    },
    "keyframe_page_transitions": {
      "enteringFront": {
        "direction": "translateY: -5 → -2 → 0",
        "opacity": "0 → 0.45 → 1",
        "timing": "0% → 60% → 100%",
        "duration": 400
      },
      "exitingFront": {
        "direction": "translateY: 0 → 2 → 5",
        "opacity": "1 → 0.45 → 0",
        "timing": "0% → 30% → 100%",
        "duration": 250
      },
      "enteringBack": {
        "direction": "translateY: 5 → 2 → 0",
        "opacity": "0 → 0.45 → 1",
        "timing": "0% → 60% → 100%",
        "duration": 400
      },
      "exitingBack": {
        "direction": "translateY: 0 → -2 → -5",
        "opacity": "1 → 0.45 → 0",
        "timing": "0% → 30% → 100%",
        "duration": 250
      },
      "note": "Front enters from top/exits down, back enters from bottom/exits up"
    },
    "orientation_support": {
      "horizontal": "rotate: 0deg (default, card upright)",
      "vertical": "rotate: -90deg (card rotated, dimensions swapped)",
      "custom": "Any degree value (e.g., '45deg')",
      "transform_logic": "Applied to rotation container, swaps width/height for vertical"
    }
  },

  "reanimated_patterns": {
    "shared_values": [
      {
        "name": "isFlipped (boolean state)",
        "type": "React.useState<boolean>",
        "updates": "Toggle on card press",
        "drives": "progress SharedValue via useDerivedValue"
      },
      {
        "name": "progress",
        "type": "useDerivedValue<number>",
        "calculation": "withSpring(isFlipped ? 1 : 0, SPRING_CONFIG)",
        "range": "[0, 1]",
        "scope": "Drives all flip animations"
      }
    ],
    "useDerivedValue": {
      "usage": [
        "Card flip progress (in FlipCard component)",
        "Blur intensity progress (in main App)"
      ],
      "pattern": "Wraps withSpring to create smooth transitions",
      "dependencies": ["isFlipped"],
      "benefit": "Automatic reactivity when state changes"
    },
    "useAnimatedStyle": {
      "instances": [
        "frontAnimatedStyle (rotateY, scale, backfaceVisibility)",
        "backAnimatedStyle (rotateY, scale, backfaceVisibility, absolute positioning)",
        "containerAnimatedStyle (scale only)"
      ],
      "dependencies": ["progress"],
      "pattern": "Interpolate progress.value to drive multiple transform properties"
    },
    "useAnimatedProps": {
      "component": "AnimatedBlurView",
      "property": "intensity",
      "interpolation": "5-point curve for wave effect",
      "dependencies": ["progress"]
    },
    "spring_configs": {
      "card_flip": {
        "mass": 1.2,
        "stiffness": 60,
        "damping": 12,
        "velocity": 0.2,
        "effect": "Smooth, weighty flip with subtle bounce"
      },
      "blur_progress": {
        "mass": 1.2,
        "stiffness": 80,
        "damping": 12,
        "velocity": 0.3,
        "effect": "Slightly faster blur transition than card"
      }
    },
    "keyframe_animations": {
      "pattern": "new Keyframe({...}).duration(ms)",
      "timing_control": "Percentage keyframes (0, 60, 100)",
      "properties": ["opacity", "transform: [translateY]"],
      "applied_to": "Animated.View with entering/exiting props",
      "key_prop": "Required for proper unmount/mount detection"
    }
  },

  "component_architecture": {
    "flip_card": {
      "type": "Reusable component",
      "memo": true,
      "comparison": "Custom comparison function for props (isFlipped, angle, profile)",
      "props": {
        "profile": {
          "type": "ProfileType",
          "required": true,
          "description": "Profile information to display"
        },
        "angle": {
          "type": "'horizontal' | 'vertical' | `${number}deg`",
          "default": "horizontal",
          "description": "Card orientation"
        },
        "isFlipped": {
          "type": "boolean",
          "default": false,
          "description": "Whether card is flipped to show back"
        }
      },
      "layout_pattern": "Nested containers (rotationContainer → Animated container → card → flipContainer → front/back faces)",
      "absolute_positioning": "Back face uses absolute positioning to overlay front"
    },
    "card_faces": {
      "front": {
        "memo": true,
        "content": "Name, verified badge, avatar",
        "gradient": ["#FF6B6B", "#FF8E53", "#FF6B6B"] (coral to orange)",
        "layout": "Name at top, avatar at bottom-right"
      },
      "back": {
        "memo": true,
        "content": "Avatar, name, location, statistics (trips, reviews, years)",
        "background": "white",
        "layout": "Header row with avatar + info, stats row below"
      }
    },
    "profile_avatar": {
      "memo": true,
      "comparison": "Custom comparison (name, size, isVerified)",
      "features": [
        "Circular gradient background",
        "First letter initial",
        "Verification badge overlay (conditional)",
        "Responsive sizing (all dimensions scale with size prop)"
      ],
      "computation": "useMemo for all derived values (fontSize, badgeSize, etc.)"
    },
    "description_pages": {
      "MainPage": "Identity verification and trust & safety info",
      "SecondPage": "Profile overview and community engagement info",
      "styling": "Consistent section-based layout with title and body text"
    }
  },

