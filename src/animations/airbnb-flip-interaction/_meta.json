  "3d_transform_mechanics": {
    "perspective": {
      "value": 1000,
      "effect": "Determines depth of 3D space",
      "position": "Must be first in transform array",
      "typical_range": "500-2000"
    },
    "rotateY_interpolation": {
      "front": {
        "input": "[0, 1] (progress)",
        "output": "[0deg, 180deg]",
        "visibility": "Visible 0-90deg, hidden 90-180deg (backface culling)"
      },
      "back": {
        "input": "[0, 1] (progress)",
        "output": "[180deg, 360deg]",
        "visibility": "Hidden 180-270deg, visible 270-360deg (backface culling)"
      }
    },
    "backface_visibility": {
      "value": "hidden",
      "purpose": "Hides face when rotated away from viewer",
      "critical": "Without this, back face would show reversed during flip"
    },
    "scale_interpolation": {
      "input": "[0, 0.5, 1] (progress)",
      "output": "[1, 0.98, 1]",
      "midpoint": "0.98 scale at 90deg (halfway through flip)",
      "effect": "Subtle depth cue, card appears to move slightly away from viewer"
    },
    "absolute_positioning": {
      "back_face": "position: absolute with top/left/right/bottom: 0",
      "purpose": "Overlays back face exactly on top of front face",
      "z_ordering": "Back renders after front in JSX, but hidden by backface culling"
    }
  },

