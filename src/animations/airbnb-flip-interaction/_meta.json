  "performance_optimizations": {
    "memo_components": {
      "FlipCard": "Custom comparison prevents re-renders when props unchanged",
      "CardFront": "Simple memo, re-renders only when profile changes",
      "CardBack": "Simple memo, re-renders only when profile changes",
      "ProfileAvatar": "Custom comparison (name, size, isVerified)"
    },
    "useMemo_calculations": {
      "cardDimensions": "Calculated once per screenWidth change",
      "transformStyle": "Calculated once per angle/dimension change",
      "cardStyle": "Prevents style object recreation",
      "avatar_computed_values": "All size-dependent calculations memoized",
      "avatar_styles": "Individual style objects memoized to prevent recreation"
    },
    "animated_components": {
      "AnimatedBlurView": "Animated.createAnimatedComponent(BlurView)",
      "purpose": "Enables animated props (intensity) on BlurView"
    },
    "backface_culling": {
      "benefit": "GPU doesn't render hidden faces",
      "property": "backfaceVisibility: 'hidden'",
      "impact": "Significant performance gain for 3D rotations"
    },
    "scroll_view": {
