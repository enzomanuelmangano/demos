  "mathematical_algorithms": {
    "rotation_calculation": {
      "front": "rotateY = interpolate(progress, [0, 1], [0, 180])",
      "back": "rotateY = interpolate(progress, [0, 1], [180, 360])",
      "note": "180deg offset ensures faces start/end in correct positions"
    },
    "scale_calculation": {
      "formula": "interpolate(progress, [0, 0.5, 1], [1, 0.98, 1])",
      "midpoint": "0.98 at progress=0.5 (90deg rotation)",
      "depth_illusion": "Creates sense of card moving in Z-space"
    },
    "blur_wave_calculation": {
      "formula": "interpolate(progress, [0, 0.2, 0.5, 0.8, 1], [0, 10, 20, 10, 0])",
      "peak": "20 at progress=0.5 (midpoint)",
      "symmetrical": "Blur increases/decreases symmetrically",
      "purpose": "Maximum blur when card is edge-on (hardest to read)"
    },
    "card_sizing": {
      "width": "screenWidth - spacing.xxl (screenWidth - 32)",
      "height": "cardWidth / 1.6 (aspect ratio)",
      "responsive": "Adapts to screen size while maintaining aspect ratio"
    },
    "avatar_scaling": {
      "fontSize": "size * 0.4",
      "badgeSize": "size * 0.32",
      "badgeRadius": "size * 0.16",
      "checkmarkSize": "size * 0.14",
      "pattern": "All elements scale proportionally with size prop"
    },
    "safe_area_insets": {
      "paddingTop": "insets.top",
      "paddingBottom": "insets.bottom",
      "purpose": "Respects device notches and system UI"
    }
  },

