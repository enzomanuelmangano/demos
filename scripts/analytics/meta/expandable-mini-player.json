      "inverted": true,
      "note": "Dragging down (positive Y) decreases progress"
    },
    "snap_threshold_logic": {
      "condition": "progress > 0.8",
      "true_result": "withTiming(1) - snap to expanded",
      "false_result": "withTiming(0) - snap to collapsed"
