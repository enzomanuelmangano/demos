{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "clean": true,
    "dts": true,
    "entry": ["src/index.ts"],
    "format": ["esm", "cjs"],
    "sourcemap": false,
    "minify": true,
    "target": "esnext",
    "outDir": "dist"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json"
}
